#version 330 core
layout (location = 0) in vec3 vPos;
layout (location = 1) in vec3 aNormal;

out vec3 Normal;
out vec3 FragPos;

uniform mat4 matrix;

void main() {

	gl_Position = matrix * vec4(vPos, 1.0f);
	Normal = mat3(transpose(inverse(matrix))) * aNormal;
    FragPos = vec3(matrix * vec4(vPos, 1.0));
	
}