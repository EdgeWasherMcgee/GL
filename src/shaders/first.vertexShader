#version 330 core

layout(location = 0) in vec2 vertexPosition;
layout(location = 1) in unsigned int offset_rotation;
uniform float theta;

#define PI 3.14159265

void main() {
	float r = theta + float(offset_rotation) * (PI/2);
	mat2 rotationMatrix = mat2(cos(r), -sin(r), 
						  	   sin(r),  cos(r) );
	vec2 newMatrix = rotationMatrix * vertexPosition;
	gl_Position.xy = newMatrix.xy;
}